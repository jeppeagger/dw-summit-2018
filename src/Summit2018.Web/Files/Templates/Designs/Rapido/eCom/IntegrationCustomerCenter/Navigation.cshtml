@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

<div class="grid">
    <div class="grid__col-12 grid__col--bleed">
        <div class="grid__cell">
            <div class="u-pull--left">
                <h2><i class="fas fa-list"></i> @GetGlobalValue("Global:Page.Name")</h2>
            </div>
            <div class="u-pull--right">
                @foreach (LoopItem page in GetLoop("Ecom:IntegrationCustomerCenter.PagesLoop"))
                {
                    bool isActive = page.GetString("Ecom:IntegrationCustomerCenter.PageMenuName") == GetString("Ecom:IntegrationCustomerCenter.PageMenuName");
                    <a href="@page.GetString("Ecom:IntegrationCustomerCenter.PageLink")" class="btn btn--secondary btn--condensed dw-mod @(isActive ? "btn--active" : "")">@page.GetString("Ecom:IntegrationCustomerCenter.PageMenuName")</a>
                }
            </div>
        </div>
    </div>
    @GetValue("Ecom:IntegrationCustomerCenter.PageContent")
</div>